{
  "manifest_version": 2,

  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "2.1.1",

  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "icons":{
  	"16": "images/icon.png",
  	"48":"images/icon.png",
  	"128":"images/icon.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon.png",
      "38": "images/icon.png"
    },
    "default_title": "设置设置",
    "default_popup": "popup.html"
   },
  "options_page": "options.html",
  "content_scripts":[{
  	"matches":[
  		"http://*/*",
      "https://*/*"
  	],
  	"js":[
      "js/utility.js",
  		"js/main.js"
  	],
  	"run_at": "document_idle"
  }],
  "default_locale": "en"
}